{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMAKE Update",
            "type": "shell",
            "command": "cmake -B${config:BUILD_DIR}",
            "group": "build",
            "problemMatcher": [],
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${config:BUILD_DIR}",
                "--",
                "${config:TARGET}"
            ],
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
            }
        },
        {
            "label": "svd",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${config:BUILD_DIR}",
                "--",
                "svd_${config:TARGET}"
            ],
            "problemMatcher": []
        },
        {
            "label": "openocd-cfg",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${config:BUILD_DIR}",
                "--",
                "openocd_cfg_${config:TARGET}"
            ],
            "problemMatcher": []
        },
        {
            "label": "debug-prepare",
            "type": "shell",
            "dependsOn": [
                "svd",
                "openocd-cfg",
                "build"
            ],
            "problemMatcher": []
        }
    ]
}